#include <iostream>
#include <stdio.h>
#include <stdlib.h>

using namespace std;

void jogo(char recebe[3][3]){

  printf(" %c | %c | %c \n", recebe[0][0],recebe[0][1],recebe[0][2]);
  printf("------------\n");
  printf(" %c | %c | %c \n", recebe[1][0],recebe[1][1],recebe[1][2]);
  printf("------------\n");
  printf(" %c | %c | %c \n", recebe[2][0],recebe[2][1],recebe[2][2]);

}

int main()
{

char casas[3][3] = {{' ',' ',' '},
                    {' ',' ',' '},
                    {' ',' ',' '}};

int jogadas = 0,l,c;

do{
jogo(casas);

if(jogadas%2 == 0){
printf("\nVez do jogador 'X'");

}else{
printf("\nVez do jogador 'O'");

}
printf("\nDigite a linha: ");
scanf("%d",&l);
printf("Digite a coluna: ");
scanf("%d",&c);
system("cls");


if(jogadas%2 == 0){
casas[l-1][c-1] = 'X';
jogadas++;

}else{
casas[l-1][c-1] = 'O';
jogadas++;

}

}while(1);

    return 0;
}






